type Service {
    id: ID! @id
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    name: String!
    cost: Float!
    description: String!
    duration: Float!
    postedBy: User
    appointments: [Appointment!]!
}

type calendarSettings{
    id:ID! @id
    workStart: Int!
    workEnd: Int!
    workDays:[String!]! @scalarList(strategy: RELATION)
    forUser:User
}


type User{
    id: ID! @id
    firstname: String!
    lastname: String!
    email: String! @unique
    password: String!
    services: [Service!]!
    appointments: [Appointment!]!
}

type Client{
    id: ID! @id
    firstname: String!
    lastname: String!

}

type Appointment{
    id: ID! @id
    date: String!
    start: DateTime!
    end: DateTime!
    completed: Boolean
    service: Service!
    user: User!
    
}