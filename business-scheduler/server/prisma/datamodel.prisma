type Service {
    id: ID! @id
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    name: String!
    cost: Float!
    description: String!
    hours: Int!
    minutes: Int!
    postedBy: User
}

type calendarSettings{
    id: ID! @id
    workStart: Int!
    workEnd: Int!
    forUser:User!
}


type User{
    id: ID! @id
    firstname: String!
    lastname: String!
    email: String! @unique
    password: String!
    services: [Service!]!
    
}

type Client{
    id: ID! @id
    age: Int!
    firstname: String!
    lastname: String!
}

type Appointment{
    id: ID! @id
    date: String!
    start: DateTime!
    end: DateTime!
    completed: Boolean
    service: Service!
    user: User!
    client: Client!
    
}